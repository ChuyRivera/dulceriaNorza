<%- include('partials/_header.ejs') %>

<div class="container" id="fondo">
    <div class="container text-center">

        <img src="css/logo2.jpg" class="rounded-circle img-thumbnail  mt-5" alt="..." id="imagen-logo">


    </div>
    <% if (typeof alert != 'undefined') { %>

    <% alert.forEach(function(error){ %>


    <div class="alert alert-warning alert-dismissible fade show fixed-top" role="alert">
        <strong>
            <%= error.msg %>
        </strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% }); %>
    <% } %>








    <div class="abs-center mt-5">
        <form action="/signup" class="form text-white" method="POST">
            <div class="form-group">
                <label for="nombre">Nombre completo:</label>
                <input type="text" name="fullname" id="fullname" class="form-control" placeholder="John Doe">
            </div>
            <div class="form-group">
                <label for="email">Correo electrónico:</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="JohnDoe@hotmail.com"
                    required>
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" name="password" id="password" class="form-control " placeholder="**"
                    required>
            </div>
            <div class="form-group">
                <label for="password">Confirmar contraseña:</label>
                <input type="password" name="password1" id="password1" class="form-control " placeholder="**"
                    required>
            </div>
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8 text-center mb-5"><button type="submit"
                        class="btn btn-primary text-dark bg-white">REGÍSTRATE</button>
                </div>
                <div class="col-sm-2"></div>
            </div>
            <div class="text-center text-white"><a href="/login">¿Ya tienes una cuenta? <br> INGRESA</a></div>


        </form>
    </div>
</div>



