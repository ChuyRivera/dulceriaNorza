<div class="container container-fluid">

    <div class="row">
        <%if(rows){ 
            rows.forEach( producto => {
                %>
        <div class="col-12">


            <div class="card mb-3">
                <img class="card-img img-rounded img-responsive"
                    src="http://localhost:3000/images/upload_images/<%=producto.imagen%>" alt="Produto"
                    id="imagen-detalle" />
