<%- include('partials/_header.ejs') %>
<%- include('partials/_navbar.ejs') %>




<div class="container container-fluid">

    <div class="row">
        <%if(data){ 
            data.forEach( producto => {
                %>
        <div class="col-12">


            <div class="card mb-3">
                <img class="card-img img-rounded img-responsive"
                    src="http://localhost:3000/images/upload_images/<%=producto.imagen%>" alt="Produto"
                    id="imagen-detalle" />
                <div class="card-img-overlay d-flex justify-content-end">
                    <a href="#" class="card-link text-danger like">
                        <i class="fas fa-heart"></i>
                    </a>
                </div>
                <div class="card-body">
                    <h2 class="card-title"><%=producto.nombre%></h2>
                    <h6 class="card-subtitle mb-2 text-muted">Style: VA33TXRJ5</h6>
                    <div>
                        <h4>Descripción del producto</h4>
                        <p class="card-text text-truncate">
                            <%=producto.descripcion%>
                        </p>
                    </div>
                    <div class="buy d-flex justify-content-between align-items-center">
                        <div class="price text-success">
                            <h5 class="mt-4">$ <%=producto.precio%></h5>
                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>
</div>
<div class="container" id="fondo">
    <div class="container text-center" >


    </div>
    <div class="abs-center mt-5">
        <form action="/product/edited/<%= producto.id %>" class="form text-white" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="nombre">Nombre del producto:</label>
                <input type="text" name="nombre" id="nombre" class="form-control" value="<%=producto.nombre%>">
            </div>
            <div class="form-group">
                <label for="descripcion">Descripción:</label>
                <input type="text" name="descripcion" id="descripcion" class="form-control " value="<%=producto.descripcion%>">
            </div>
            <div class="form-group">
                <label for="precio">Precio:</label>
                <input type="text" name="precio" id="precio" class="form-control " value="<%=producto.precio%>">
            </div>
            <div class="form-group">
                <label for="upload_image">Imagen del producto</label>
                    <input class="form-control" type="file" name="upload_image"  accept=""/>
            </div>
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8 text-center mb-5"><button type="submit" class="btn btn-primary text-dark bg-white">EDITAR PRODUCTO</button>
                </div>
                <div class="col-sm-2"></div>
            </div>
            
            

        </form>
        <% } )}%>
    </div>
</div>